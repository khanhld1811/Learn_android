<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginBottom="150dp"
        android:text="Layout trong Android"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_linearLayout"
        android:text="@string/linear_layout"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:background="@color/colorOrangred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_relativeLayout"
        android:text="@string/relative_layout"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:background="@color/colorOrangred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_gridLayout"
        android:text="@string/grid_layout"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:background="@color/colorOrangred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_tableLayout"
        android:text="@string/table_layout"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:background="@color/colorOrangred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_frameLayout"
        android:text="@string/frame_layout"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:background="@color/colorOrangred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_constraintLayout"
        android:text="@string/constraint_layout"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:background="@color/colorOrangred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>